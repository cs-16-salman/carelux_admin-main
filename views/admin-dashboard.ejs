<!DOCTYPE html>
<html lang="en">

<head>
  <title>Dashboard</title>
  <style>
    .card-img-top {
      padding: 10px 10px 0;
    }
  </style>
  <%- include('./partials/head'); %>
</head>

<body>
  <main class="wrapper">
    <input type="hidden" id="menu-item-selector" value="dashboard" />
    <aside>
      <%- include('./partials/sidebar'); %>

    </aside>

    <div class="main-panel">
      <!-- Navbar -->
      <%- include('./partials/nav-bar'); %>
      <!-- End Navbar -->

      <div class="content">
        <% if (messages.success) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <strong>
            <%= messages.success %>
          </strong>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <% } %>
        <% if (messages.error) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <strong>
            <%= messages.error %>
          </strong>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <% } %>

        <div class="row">
          <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="card card-stats">
              <div class="card-body ">
                <div class="row">
                  <div class="col-5 col-md-4">
                    <div class="icon-big text-center icon-warning">
                      <i class="fa fa-envelope text-primary"></i>
                    </div>
                  </div>
                  <div class="col-7 col-md-8">
                    <div class="numbers">
                      <p class="card-category">Total</p>
                      <p class="card-title">
                        <%= statistics.inquiriesCount %>
                      <p>
                    </div>
                  </div>
                </div>
              </div>
              <div class="card-footer ">
                <hr>
                <a href="inquiries">
                  <div class="stats">
                    <i class="fa fa-envelope"></i>
                    Inquiries
                  </div>
                </a>
              </div>
            </div>
          </div>
          <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="card card-stats">
              <div class="card-body ">
                <div class="row">
                  <div class="col-5 col-md-4">
                    <div class="icon-big text-center icon-warning">
                      <i class="fa fa-user-md text-warning"></i>
                    </div>
                  </div>
                  <div class="col-7 col-md-8">
                    <div class="numbers">
                      <p class="card-category">Total</p>
                      <p class="card-title">
                        <%= statistics.doctorsCount %>
                      <p>
                    </div>
                  </div>
                </div>
              </div>
              <div class="card-footer ">
                <hr>
                <a href="doctors">
                  <div class="stats">
                    <i class="fa fa-user-md"></i>
                    Doctors
                  </div>
                </a>
              </div>
            </div>
          </div>
          <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="card card-stats">
              <div class="card-body ">
                <div class="row">
                  <div class="col-5 col-md-4">
                    <div class="icon-big text-center icon-warning">
                      <i class="fa fa-hospital-o text-success"></i>
                    </div>
                  </div>
                  <div class="col-7 col-md-8">
                    <div class="numbers">
                      <p class="card-category">Total</p>
                      <p class="card-title">
                        <%= statistics.hospitalCount %>
                      <p>
                    </div>
                  </div>
                </div>
              </div>
              <div class="card-footer ">
                <hr>
                <a href="hospitals">
                  <div class="stats">
                    <i class="fa fa-hospital-o"></i>
                    Hospitals
                  </div>
                </a>
              </div>
            </div>
          </div>
          <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="card card-stats">
              <div class="card-body ">
                <div class="row">
                  <div class="col-5 col-md-4">
                    <div class="icon-big text-center icon-warning">
                      <i class="fa fa-quote-left text-danger"></i>
                    </div>
                  </div>
                  <div class="col-7 col-md-8">
                    <div class="numbers">
                      <p class="card-category">Total</p>
                      <p class="card-title">
                        <%= statistics.testimonialCount %>
                      <p>
                    </div>
                  </div>
                </div>
              </div>
              <div class="card-footer ">
                <hr>
                <a href="testimonials">
                  <div class="stats">
                    <i class="fa fa-quote-left"></i>
                    Testimonials
                  </div>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
  </main>

  <%- include('./partials/footer'); %>
</body>

</html>